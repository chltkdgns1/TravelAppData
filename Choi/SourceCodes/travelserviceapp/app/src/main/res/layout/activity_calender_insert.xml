<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:id="@+id/EditText_Calender_Name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0.05"

        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="스케쥴 제목을 입력해주세요"
        android:inputType="textMultiLine|textNoSuggestions" />


    <EditText
        android:id="@+id/EditText_Calender_Adress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0.07"
        android:background="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="주소 : "
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditText_Calender_Category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0.07"
        android:background="@null"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="카테고리 : "
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/ImageView_Calender_Image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <EditText
        android:id="@+id/EditText_Calender_Content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.53"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="스케쥴 내용을 입력해주세요"
        android:inputType="textMultiLine|textNoSuggestions" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button_Calender_Search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_edittext"
            android:text="검색" />

        <Button
            android:id="@+id/Button_Calender_Insert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_edittext"
            android:text="입력버튼" />

    </LinearLayout>
</LinearLayout>

